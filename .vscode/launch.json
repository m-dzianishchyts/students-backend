"version": "0.2.0",
"configurations": [
{
"console": "integratedTerminal",
"name": "Launch",
"program": "${workspaceFolder}/app.js",
"request": "launch",
"skipFiles": [
"<node_internals>/**"
],
"type": "pwa-node"
},
{
"console": "integratedTerminal",
"internalConsoleOptions": "neverOpen",
"name": "Nodemon Launch",
"program": "${workspaceFolder}/app.js",
"request": "launch",
"restart": true,
"runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin/nodemon",
"skipFiles": [
"<node_internals>/**"
],
"type": "pwa-node",
},
]
}